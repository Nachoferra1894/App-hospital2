<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Home"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/homeLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="vertical">

        <ImageView
            android:layout_margin="15dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/circleshape"
            android:backgroundTint="@color/purple3"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLayout2"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/homeLayout1"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="30dp"
            android:text="Hola,"
            android:textSize="33sp" />

        <TextView
            android:id="@+id/homeFirstName_txtVw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="0dp"
            android:text="First Name!"
            android:textSize="40sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/homeLayout3"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeLayout2"
        android:orientation="vertical">


        <View
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="80dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/orange"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/homeLayout4"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeLayout3"
        android:orientation="vertical">

        <View
            android:id="@+id/home1_vw"
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/purple1"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:id="@+id/homeLayout5"
        android:layout_width="wrap_content"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/homeLayout4"
        android:orientation="vertical">

        <View
            android:scaleType="fitXY"
            android:layout_gravity="center_horizontal"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:background="@drawable/rounded_edittext"
            android:backgroundTint="@color/purple1"/>

    </LinearLayout>

    <RelativeLayout
        android:padding="10dp"
        android:layout_alignLeft="@+id/homeLayout4"
        android:layout_alignRight="@+id/homeLayout4"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignTop="@+id/homeLayout4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_txtVw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Como te encuentras hoy?"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginTop="5sp"
            android:id="@+id/home_txtVw2"
            android:layout_below="@id/home_txtVw1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="Completa este cuestionario y cuentanos como te has" />

        <TextView
            android:layout_marginTop="2sp"
            android:layout_below="@id/home_txtVw2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:text="sentido hoy!"/>

    </RelativeLayout>



</RelativeLayout>