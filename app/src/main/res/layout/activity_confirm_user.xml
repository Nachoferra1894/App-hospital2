<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConfirmUser"
    android:background="@color/purple1">

    <RelativeLayout
        android:id="@+id/continue_user_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="@color/purple4"
        >

        <TextView
            android:id="@+id/confirm_continue_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Haz click para continuar"
            android:textSize="22dp"
            android:padding="30dp"
            android:textColor="@color/white"/>
    </RelativeLayout>

    <ImageView
        android:id="@+id/user_confirm_deco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/continue_user_confirm"
        android:src="@drawable/back_ilu3"
        android:scaleType="fitXY"/>

    <LinearLayout
        android:id="@+id/user_confirm_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/user_confirm_deco"
        android:layout_marginBottom="30dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bienvenido"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <TextView
            android:id="@+id/confirm_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textSize="40dp"
            android:textColor="@color/white"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/confirm_avatar"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@id/user_confirm_text"
        android:layout_centerHorizontal="true"
        android:src="@drawable/avatar1"
        android:layout_marginBottom="30dp"/>


</android.widget.RelativeLayout>