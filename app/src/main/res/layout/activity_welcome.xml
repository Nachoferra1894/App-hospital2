<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_2"
        android:scaleType="fitXY"/>
    <ImageView
        android:scaleType="fitXY"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/welcome_1"/>
    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_marginTop="80dp">
        <TextView
            android:id="@+id/welcome_title_first"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Firstname"
            android:textSize="25dp"
            android:textColor="@color/purple4"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=", eres tu?"
            android:textSize="25dp"
            android:textColor="@color/purple4" />
    </LinearLayout>

    <LinearLayout
        android:layout_above="@id/id_cont_btn"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/welcome_avatar"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/avatar1"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/id_cont_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <Button
            android:id="@+id/wlecome_confirm"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="SI. SOY YO!"
            android:textStyle="bold"

            android:background="@drawable/btn_rounded_primarycolordark"/>
        <Button
            android:id="@+id/welcome_negate"
            android:layout_marginTop="20dp"
            android:layout_width="280dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_rounded_darkgrey"
            android:text="NO. CAMBIAR DE CUENTA"/>
    </LinearLayout>
</RelativeLayout>