<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Home"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/bottom_cont"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentBottom="true"
        android:background="#EEE6FE"
        android:orientation="vertical"/>
    <ImageView
        android:layout_above="@id/bottom_cont"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/back_home1"
        android:scaleType="fitXY"/>

    <ImageView
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        android:layout_above="@id/bottom_cont"
        android:layout_marginBottom="-2dp"
        android:scaleType="fitXY"
        android:src="@drawable/back_home2" />

    <LinearLayout
        android:id="@+id/id1"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:id="@+id/id_user_avatar"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/avatar1"/>
        <Button
            android:id="@+id/id_avatar_btn"
            android:layout_marginTop="20dp"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:text="CAMBIAR"
            android:textStyle="bold"
            android:background="@drawable/btn_rounded_secondarycolor"/>
    </LinearLayout>

    <ScrollView
        android:layout_marginBottom="20dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_below="@id/id1"
        android:layout_width="340dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="3">
                <ImageView

                    android:id="@+id/id_avatar1"
                    android:layout_alignParentStart="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar1"
                    android:layout_weight="1"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar2"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar2"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar3"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar3"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_weight="3">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar4"
                    android:layout_alignParentStart="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar4"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar5"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar5"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar6"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar6"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar7"
                    android:layout_alignParentStart="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar7"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar8"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar8"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar9"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar9"/>
            </LinearLayout>
            <LinearLayout
                android:layout_weight="3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar10"
                    android:layout_alignParentStart="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar10"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar11"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar11"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar12"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar12"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp"
                android:layout_weight="3">
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar13"
                    android:layout_alignParentStart="true"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar13"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar14"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar14"/>
                <ImageView
                    android:layout_weight="1"
                    android:id="@+id/id_avatar15"
                    android:layout_alignParentEnd="true"
                    android:layout_gravity="end"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@drawable/avatar15"/>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>